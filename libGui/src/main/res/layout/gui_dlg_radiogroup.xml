<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/gui_dimens_big"
    app:cardElevation="0px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogradiogroup_title"
            style="@style/Gui_TextStyle_BlackLight_Big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <com.zcolin.gui.DialogFixHeightScrollView
            android:id="@+id/dialogradiogroup_sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RadioGroup
                android:id="@+id/dialogradiogroup_radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp" />

        </com.zcolin.gui.DialogFixHeightScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/gui_divider" />

        <com.zcolin.gui.ZDialogBottomView
            android:id="@+id/dialogradiogroup_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>