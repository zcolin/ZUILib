<resources>
    <!-- Base application theme -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/green_light</item>
        <item name="colorControlHighlight">@color/red_light</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="BaseTheme">
        <!--gui库中的组件通用设置 其他属性看gui库中的gui_attr.xml文件-->
        <item name="zkv_key_text_color">@color/red_light</item>
        <item name="zkv_value_text_color">@color/green_light</item>
        <item name="zdivider_color">#99ababab</item>
        <item name="zdivider_height_size">1px</item>
        <item name="zkve_value_background">@color/transparent</item>
    </style>

    <!-- PopupWindow 动画 -->
    <style name="style_anim_popupWindow">
        <item name="android:windowEnterAnimation">@anim/popupwindow_exit</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_enter</item>
    </style>

    <!--Switch文字风格-->
    <style name="SwitchTheme" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/switch_text_selector</item>
    </style>

</resources>
